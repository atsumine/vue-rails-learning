<h1>People</h1>
<div id="app">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Memo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody v-for='item in items'>
      <tr>
        <td>{{item.name}}</td>
        <td>{{item.age}}</td>
        <td>{{item.memo}}</td>
      </tr>
    </tbody>
  </table>

</div>
